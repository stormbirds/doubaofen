<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tab1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="语音库" android:layout_weight="1"/>
        <TextView android:textColor="#ffcccccc" android:gravity="center" android:id="@+id/tab2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="提取声音" android:layout_weight="1"/>
    </LinearLayout>
    <android.support.constraint.ConstraintLayout android:id="@+id/search_header" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textSize="12dp" android:id="@+id/search_key" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="请输入关键字" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/search" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="12dp" android:id="@+id/search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="搜索" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout android:id="@+id/save_header" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textSize="12dp" android:id="@+id/save_key" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="请输入文件名" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="12dp" android:id="@+id/save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="保存" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/save_cancel" app:layout_constraintTop_toBottomOf="@+id/save_key"/>
        <TextView android:textSize="12dp" android:id="@+id/save_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="取消" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/save" app:layout_constraintRight_toLeftOf="@+id/save_clear" app:layout_constraintTop_toBottomOf="@+id/save_key"/>
        <TextView android:textSize="12dp" android:id="@+id/save_clear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="清空" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/save_cancel" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/save_key"/>
    </android.support.constraint.ConstraintLayout>
    <ListView android:id="@+id/list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp"/>
    <TextView android:textSize="12dp" android:gravity="center" android:id="@+id/empty" android:layout_width="match_parent" android:layout_height="300dp" android:text="(空)" android:layout_weight="1"/>
</LinearLayout>
