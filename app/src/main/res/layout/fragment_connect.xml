<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#4d71c7" android:layout_width="match_parent" android:layout_height="45dp">
        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:layout_width="wrap_content" android:layout_height="45dp" android:text="精准人脉" android:layout_centerInParent="true" android:elevation="2dp"/>
    </RelativeLayout>
    <LinearLayout android:background="#4d71c7" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_type" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="选择行业" android:drawableRight="@drawable/xiala" android:layout_weight="1"/>
        <TextView android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_sex" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="选择性别" android:drawableRight="@drawable/xiala" android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/swipe_refresh" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <android.support.v7.widget.RecyclerView android:id="@+id/recy_connect" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <View android:background="#dddddd" android:layout_width="match_parent" android:layout_height="1dp"/>
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="45dp">
        <CheckBox android:id="@+id/cb_select" android:layout_width="wrap_content" android:layout_height="45dp" android:text="全选"/>
        <TextView android:textColor="#fff" android:gravity="center" android:id="@+id/tv_export" android:background="#4d71c7" android:layout_width="100dp" android:layout_height="40dp" android:text="导出" android:layout_centerInParent="true"/>
        <TextView android:textColor="#4d71c7" android:gravity="center" android:id="@+id/tv_refresh" android:layout_width="60dp" android:layout_height="40dp" android:text="换一批" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
