<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/float_background">

            <CheckBox
                android:id="@+id/checkbox_float"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cbx_primary_selector"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/txt_float_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkbox_float"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="开始"
                android:textColor="@color/color_C6"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="56dp"
            android:background="@drawable/float_background">

            <TextView
                android:id="@+id/txt_back"
                android:layout_width="60dp"
                android:layout_height="54dp"
                android:drawableTop="@drawable/vector_back"
                android:drawablePadding="-4dp"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:text="返回"
                android:textColor="@color/color_C6"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
