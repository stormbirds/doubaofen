<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#4d71c7" android:layout_width="match_parent" android:layout_height="45dp">
        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:layout_width="wrap_content" android:layout_height="45dp" android:text="首页" android:layout_centerInParent="true" android:elevation="2dp"/>
        <ImageView android:id="@+id/iv_setting" android:padding="13dp" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/setting" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView android:background="#f6f6f6" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:overScrollMode="never">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/iv_main" android:visibility="gone" android:layout_width="match_parent" android:layout_height="140dp" android:scaleType="centerCrop"/>
            <android.support.v7.widget.RecyclerView android:id="@+id/recy_data" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
            <TextView android:textColor="@color/colorAccent" android:gravity="center" android:id="@+id/tv_liandong" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="抖音联动版"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
